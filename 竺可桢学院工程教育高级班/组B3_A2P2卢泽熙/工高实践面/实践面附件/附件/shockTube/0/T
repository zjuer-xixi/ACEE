FoamFile
{
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    sides_in
    {
        type            inletOutlet;
        inletValue      uniform 1;
        value           uniform 1;
    }
    sides_out
    {
        type            zeroGradient;
    }
    empty
    {
        type            empty;
    }
}


